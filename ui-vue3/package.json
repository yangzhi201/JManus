{
  "name": "jmanus-ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:e2e": "start-server-and-test preview http://localhost:4173 'cypress run --e2e'",
    "test:e2e:dev": "start-server-and-test 'vite dev --port 4173' http://localhost:4173 'cypress open --e2e'",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "type-check:watch": "vue-tsc --build --force --watch",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write src/",
    "serve": "vite preview",
    "dev:server": "mvn spring-boot:run",
    "refactor:check": "pnpm run type-check && pnpm run lint:check",
    "refactor:fix": "pnpm run lint && pnpm run format",
    "check:all": "pnpm run type-check && pnpm run lint:check && pnpm run test:unit",
    "dev:strict": "vite --mode development",
    "check:chinese": "python3 scripts/check-chinese-content.py --dir src",
    "check:chinese:fail": "python3 scripts/check-chinese-content.py --dir src --fail-on-found"
  },
  "dependencies": {
    "@ant-design/icons-vue": "^7.0.1",
    "@antv/g2": "^5.1.19",
    "@iconify/vue": "^4.1.1",
    "ant-design-vue": "^4.0.8",
    "axios": "^1.12.0",
    "dayjs": "^1.11.10",
    "dompurify": "^3.2.6",
    "highlight.js": "^11.11.1",
    "lodash": "^4.17.21",
    "marked": "^16.2.0",
    "monaco-editor": "^0.45.0",
    "nprogress": "^0.2.0",
    "pinia": "^2.3.1",
    "vue": "^3.3.8",
    "vue-i18n": "^9.14.5",
    "vue-router": "^4.2.5",
    "vue3-colorpicker": "^2.3.0"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.5.1",
    "@types/jsdom": "^21.1.6",
    "@types/lodash": "^4.14.202",
    "@types/node": "^22.0.0",
    "@types/nprogress": "^0.2.3",
    "@eslint/js": "^9.18.0",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "globals": "^15.14.0",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/eslint-config-prettier": "^10.0.0",
    "@vue/eslint-config-typescript": "^14.0.0",
    "@vue/test-utils": "^2.4.3",
    "@vue/tsconfig": "^0.4.0",
    "cypress": "^13.6.1",
    "eslint": "^9.18.0",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "eslint-plugin-vue": "^9.32.0",
    "jsdom": "^23.0.1",
    "less": "^4.3.0",
    "npm-run-all2": "^6.1.1",
    "prettier": "^3.1.0",
    "start-server-and-test": "^2.0.3",
    "typescript": "~5.3.3",
    "vite": "^5.4.21",
    "vite-plugin-checker": "^0.9.3",
    "vitest": "^1.0.0",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^1.8.25"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {
      "@csstools/css-color-parser": "3.1.0",
      "form-data": ">=4.0.4",
      "axios": ">=1.12.0",
      "vite": ">=5.4.21",
      "brace-expansion": ">=2.0.2",
      "minimatch": ">=10.0.0",
      "tmp": ">=0.2.4",
      "esbuild": ">=0.25.0",
      "@intlify/core-base": "9.14.5"
    }
  }
}
